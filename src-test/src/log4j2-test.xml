<?xml version="1.0" encoding="UTF-8"?>
<Configuration packages="org.openbravo.dbsm.test.base">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%-4r %-5p %c - %m%n"/>
    </Console>

    <TestLogAppender name="TestLogAppender"/>
  </Appenders>
  <Loggers>
    <Root level="INFO">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="TestLogAppender"/>
    </Root>
    <Logger name="log4j.logger.org.apache.commons" level="WARN">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="TestLogAppender"/>
    </Logger>
    <Logger name="log4j.logger.org.apache.ddlutils.util.JdbcSupport" level="WARN">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="TestLogAppender"/>
    </Logger>
  </Loggers>
</Configuration>